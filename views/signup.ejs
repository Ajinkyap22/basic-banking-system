<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body>
    <header><%- include('./partials/header') -%></header>

    <main
      class="
        container-fluid
        d-flex
        mt-5
        justify-content-center
        align-items-center
      "
    >
      <section class="w-50 m-auto p-3 shadow bg-white">
        <h1 class="text-center">Sign up</h1>
        <h6 class="text-center">
          Already a member?
          <a href="/login" class="link-primary text-decoration-none">Login</a>
        </h6>
        <hr />

        <form method="POST" action="" class="p-2">
          <% if(typeof error !== 'undefined'){ %>
          <p class="text-danger pt-2"><%= error %></p>
          <% } %>

          <!-- prettier-ignore -->
          <% if(typeof errors !== 'undefined'){ %>
          <% errors.forEach((error) => { %>
          <p class="text-danger pt-2"><%= error.message || error %></p>
          <% }) %>
          <!-- prettier-ignore -->
          <% } %>

          <div class="form-group py-2">
            <label class="py-1" for="name"
              >Name <span class="text-danger">*</span></label
            >
            <input type="text" name="name" class="form-control" required />
          </div>

          <div class="form-group py-2">
            <label class="py-1" for="email"
              >E-mail <span class="text-danger">*</span></label
            >
            <input type="email" name="email" class="form-control" required />
          </div>

          <div class="form-group py-2">
            <label class="py-1" for="password"
              >Password <span class="text-danger">*</span></label
            >
            <input
              type="password"
              name="password"
              class="form-control"
              required
            />
          </div>

          <div class="form-group py-2">
            <label class="py-1" for="confirmPassword"
              >Confirm Password <span class="text-danger">*</span></label
            >
            <input
              type="password"
              name="confirmPassword"
              class="form-control"
              required
            />
          </div>

          <div class="py-3">
            <button class="btn btn-table me-2">Sign up</button>
            <a href="/" class="link-secondary text-decoration-none">Go Back</a>
          </div>
        </form>
      </section>
    </main>

    <footer class="pt-5"><%- include('./partials/footer') -%></footer>
  </body>
</html>
