<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body>
    <header><%- include('./partials/header') -%></header>

    <main
      class="
        container-fluid
        d-flex
        flex-column
        mt-5
        justify-content-center
        align-items-center
      "
    >
      <section class="mb-2">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          aria-hidden="true"
          role="img"
          width="50"
          height="50"
          preserveAspectRatio="xMidYMid meet"
          viewBox="0 0 24 25"
          class="mb-3"
        >
          <path
            d="M9 7h6v2h-2v8h-2V9H9V7m3-5a10 10 0 0 1 10 10a10 10 0 0 1-10 10A10 10 0 0 1 2 12A10 10 0 0 1 12 2m0 2a8 8 0 0 0-8 8a8 8 0 0 0 8 8a8 8 0 0 0 8-8a8 8 0 0 0-8-8z"
            fill="currentColor"
          />
        </svg>
        <span class="display-6">TSF Bank</span>
      </section>
      <section class="w-50 m-auto p-3 shadow bg-white form">
        <h2 class="text-center">Sign up</h2>
        <h6 class="text-center">
          Already a member?
          <a href="/login" class="link-primary text-decoration-none">Login</a>
        </h6>
        <hr />

        <form method="POST" action="" class="p-2">
          <% if(typeof error !== 'undefined'){ %>
          <p class="text-danger pt-2"><%= error %></p>
          <% } %>

          <!-- prettier-ignore -->
          <% if(typeof errors !== 'undefined'){ %>
          <% errors.forEach((error) => { %>
          <p class="text-danger pt-2"><%= error.message || error %></p>
          <% }) %>
          <!-- prettier-ignore -->
          <% } %>

          <div class="form-group py-2">
            <label class="py-1 fw-bold" for="name"
              >Name <span class="text-danger">*</span></label
            >
            <input type="text" name="name" class="form-control" required />
          </div>

          <div class="form-group py-2">
            <label class="py-1 fw-bold" for="email"
              >Email <span class="text-danger">*</span></label
            >
            <input type="email" name="email" class="form-control" required />
          </div>

          <div class="form-group py-2">
            <label class="py-1 fw-bold" for="balance"
              >Balance <span class="text-danger">*</span></label
            >
            <input
              type="number"
              name="balance"
              class="form-control"
              min="1"
              max="10000"
              required
            />
          </div>

          <div class="form-group py-2">
            <label class="py-1 fw-bold" for="password"
              >Password <span class="text-danger">*</span></label
            >
            <input
              type="password"
              name="password"
              class="form-control"
              required
            />
          </div>

          <div class="form-group py-2">
            <label class="py-1 fw-bold" for="confirmPassword"
              >Confirm Password <span class="text-danger">*</span></label
            >
            <input
              type="password"
              name="confirmPassword"
              class="form-control"
              required
            />
          </div>

          <div class="py-3">
            <button class="btn btn-table me-2">Sign up</button>
            <a href="/" class="link-secondary text-decoration-none">Go Back</a>
          </div>
        </form>
      </section>
    </main>

    <footer class="pt-5"><%- include('./partials/footer') -%></footer>
  </body>
</html>
