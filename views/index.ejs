<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body>
    <header><%- include('./partials/header') -%></header>

    <section
      class="
        container-fluid
        h-100
        d-flex
        align-items-center
        justify-content-center
        flex-column
        hero
      "
    >
      <div class="pb-3 text-center text-capitalize">
        <h1>Digital banking made easy</h1>

        <small class="text-white spacing fw-lighter py-1"
          >Transfer money in a flash</small
        >
      </div>

      <div class="my-3 text-center mb-5">
        <% if (!user) { %>
        <a href="/signup" class="btn btn-light m-2 py-2">
          <i class="bi bi-bookmark-star"></i> Become a Member
        </a>
        <a href="/login" class="btn btn-outline-light m-2 py-2">
          <i class="bi bi-box-arrow-in-right"></i> Login
        </a>
        <% } else { %>

        <a href="/transfer" class="btn btn-light m-2 py-2">
          <i class="bi bi-arrow-down-up"></i> Transfer Money
        </a>
        <a href="/customers" class="btn btn-outline-light m-2 py-2">
          <i class="bi bi-people"></i> View Customers
        </a>
        <% } %>
      </div>
    </section>

    <!-- features & services -->
    <!-- instant transactions - send & receive money in a flash -->
    <!-- transaction history - log of all your transaactions to keep track -->
    <!-- transaction descriptions - descriptions to keep note of the subject of transaction -->

    <!-- faq -->

    <section class="py-3 text-center"></section>

    <footer><%- include('./partials/footer') -%></footer>
  </body>
</html>
